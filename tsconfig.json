{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": ".",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "paths": {
        "@/*": ["./src/*"],
        "@common/*": ["./src/common/*"]
      }
    },
    "include": [
      "src",
      "scripts"
    ]
  }